<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <!--<item name="android:splitMotionEvents">false</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="w_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="m_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="w_m">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 登录注册 -->
    <style name="launch_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 管理员界面 -->
    <style name="admin_control_relative" parent="m_w">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="admin_control_text" parent="w_w">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="admin_control_image">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 活动管理界面  -->
    <style name="actvities_linearLayout" parent="m_w">
        <item name="android:background">#fff</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="actvities_text" parent="w_w">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
