<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_bar" />

    <TextView
        android:id="@+id/number_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/code_number_tip"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/resigist_number"
        android:text="@string/admin_number"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/resigist_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number_tip"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="@string/admin_tip"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/code_number_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_name"
        android:layout_marginBottom="18dp"
        android:layout_toLeftOf="@+id/code_number"
        android:text="@string/code_number"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/code_number"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignBottom="@+id/code_number_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:hint="@string/code_number_hint"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_above="@+id/password"
        android:layout_alignBottom="@+id/code_number"
        android:layout_centerInParent="true"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/code_number"
        android:background="@drawable/buttonstyle"
        android:text="@string/verification_code_number"
        android:textColor="#D7D7D7"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/password"
        android:text="@string/password"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:hint="@string/password_tip"
        android:inputType="textPassword"
        android:textSize="23sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="submit"
        android:text="@string/submit" />


</RelativeLayout>