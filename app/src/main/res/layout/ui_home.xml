<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 主页设计 -->

    <!-- TODO：活动滚动页 -->
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <!-- 四个选项导航 -->

    <!-- 加入精选 -->
    <include layout="@layout/home_frage_choice"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_home_first"
            style="@style/WeightAttr"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_home_first"
            android:text="价格清单"/>

        <TextView
            android:id="@+id/tv_home_second"
            style="@style/WeightAttr"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_home_second"
            android:text="吃货头条"/>

        <TextView
            android:id="@+id/tv_home_third"
            style="@style/WeightAttr"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_home_third"
            android:text="近日热点"/>

        <TextView
            android:id="@+id/tv_home_four"
            style="@style/WeightAttr"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_home_four"
            android:text="吃货定制"/>
    </LinearLayout>

    <!-- 自由发挥 -->

</LinearLayout>
